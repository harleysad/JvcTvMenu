<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@drawable/browse_item_selector" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="@dimen/card_layout_width" android:layout_height="wrap_content">
    <FrameLayout android:layout_width="@dimen/card_image_layout_width" android:layout_height="@dimen/card_image_layout_height">
        <ImageView android:layout_gravity="top" android:id="@+id/image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
