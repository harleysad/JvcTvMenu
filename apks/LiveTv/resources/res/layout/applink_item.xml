        <TextView android:textSize="12sp" android:textColor="@color/card_meta_text_color_enabled" android:ellipsize="end" android:id="@+id/app_link_text_unfocused" android:paddingTop="@dimen/card_meta_padding_top" android:layout_width="match_parent" android:layout_height="@dimen/card_meta_layout_height" android:singleLine="true" android:fontFamily="sans-serif-condensed" android:paddingStart="12dp" android:paddingEnd="12dp"/>
    </FrameLayout>
</LinearLayout>
