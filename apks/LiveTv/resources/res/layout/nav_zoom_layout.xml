<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/nav_channel_zoom" android:padding="@dimen/nav_channel_zoom_padding" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/nav_channel_zoom_up_imageview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/nav_icon_arrow_gray_up" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/nav_channel_zoom_center_imageview" android:layout_width="@dimen/nav_channel_zoom_center_imageview_size" android:layout_height="@dimen/nav_channel_zoom_center_imageview_size" android:src="@drawable/nav_cross" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/nav_channel_zoom_down_imageview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/nav_icon_arrow_gray_down" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/nav_channel_zoom_left_iamgeview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/nav_icon_arrow_left" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/nav_channel_zoom_right_iamgeview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/nav_icon_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
