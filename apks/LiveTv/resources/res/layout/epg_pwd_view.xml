        <LinearLayout android:gravity="center" android:id="@+id/epg_input_pwd_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:importantForAccessibility="no">
            <TextView android:textSize="@dimen/epg_program_ts" android:textColor="#c0eeeeee" android:gravity="center" android:id="@+id/epg_pwd_name" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/nav_parent_psw" android:importantForAccessibility="no" android:fontFamily="sans-serif"/>
