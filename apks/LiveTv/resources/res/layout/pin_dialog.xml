                <view android:id="@+id/third" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/pin_dialog_pin_number_spacing" class="com.mediatek.wwtv.setting.view.PinDialog$PinNumberPicker"/>
