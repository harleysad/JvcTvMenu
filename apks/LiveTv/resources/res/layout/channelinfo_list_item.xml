<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="40dp">
    <CheckBox android:id="@+id/channel_info_check" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="40dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/channel_info_check" android:layout_alignParentLeft="true">
        <TextView android:textSize="18sp" android:layout_gravity="center_vertical" android:id="@+id/channel_info_no" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/menu_cancel" android:layout_weight="1" style="@style/Canvas.Scan.Text.Middle"/>
        <TextView android:textSize="18sp" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:id="@+id/channel_info_type" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/menu_cancel" android:singleLine="true" android:layout_weight="1" style="@style/Canvas.Scan.Text.Middle"/>
        <TextView android:textSize="18sp" android:ellipsize="marquee" android:gravity="center_horizontal" android:layout_gravity="center_vertical" android:id="@+id/channel_info_name" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/menu_cancel" android:scrollHorizontally="true" android:singleLine="true" android:layout_weight="1" style="@style/Canvas.Scan.Text.Middle"/>
    </LinearLayout>
</RelativeLayout>
