<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_ll_favoriteList_model" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/nav_ll_favoriteList_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="@dimen/nav_channel_list_textsize_large" android:textStyle="bold" android:textColor="@color/nav_channel_list_txt" android:gravity="center_vertical" android:id="@+id/nav_favorite_list_title" android:background="@color/nav_ch_list_title_back" android:paddingLeft="@dimen/nav_channel_details_channel_info_padding" android:layout_width="match_parent" android:layout_height="@dimen/nav_channel_list_title_height" android:text="@string/nav_channel_list"/>
        <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <ListView android:ellipsize="end" android:layout_gravity="right" android:id="@+id/nav_favorite_listview" android:background="@color/nav_ch_list_view_back" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@drawable/nav_ch_list_selector" android:divider="@drawable/translucent_background" android:choiceMode="singleChoice">
                <requestFocus/>
            </ListView>
            <ListView android:ellipsize="end" android:layout_gravity="right" android:id="@+id/nav_favourite_typeview" android:background="@color/nav_ch_list_view_back" android:visibility="gone" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@drawable/nav_ch_list_selector" android:divider="@drawable/translucent_background" android:choiceMode="singleChoice">
                <requestFocus/>
            </ListView>
        </FrameLayout>
        <TableLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/nav_favourite_list_tip" android:background="@color/nav_ch_list_view_back" android:paddingLeft="@dimen/nav_channel_list_function_layout_padding" android:paddingRight="@dimen/nav_channel_list_function_layout_padding" android:paddingBottom="@dimen/nav_channel_list_item_padding" android:layout_width="match_parent" android:layout_height="@dimen/nav_channel_list_title_height">
            <TableRow android:orientation="vertical" android:id="@+id/nav_fav_page_up_down" android:visibility="invisible" android:layout_weight="1">
                <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:paddingLeft="@dimen/nav_channel_list_padTop" android:layout_width="40dp" android:layout_height="8dp" android:src="@drawable/tk_cm_color_key_red"/>
                <TextView android:textSize="@dimen/nav_channel_list_textsize_timeduration" android:textColor="@color/nav_channel_list_color_txt" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/channel_nav_page_up" android:layout_width="0px" android:layout_height="match_parent" android:layout_marginLeft="@dimen/nav_favorite_list_marLeft" android:text="@string/nav_page_up" android:layout_weight="1"/>
                <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:paddingLeft="@dimen/nav_channel_list_padTop" android:layout_width="40dp" android:layout_height="8dp" android:src="@drawable/tk_cm_color_key_green"/>
                <TextView android:textSize="@dimen/nav_channel_list_textsize_timeduration" android:textColor="@color/nav_channel_list_color_txt" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/channel_nav_page_down" android:layout_width="0px" android:layout_height="match_parent" android:layout_marginLeft="@dimen/nav_favorite_list_marLeft" android:text="@string/nav_page_down" android:layout_weight="1"/>
            </TableRow>
            <TableRow android:orientation="horizontal" android:id="@+id/nav_page_function" android:layout_weight="1">
                <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/channel_nav_select_list_icon" android:paddingLeft="@dimen/nav_channel_list_padTop" android:layout_width="40dp" android:layout_height="8dp" android:src="@drawable/tk_cm_color_key_yellow"/>
                <TextView android:textSize="@dimen/nav_channel_list_textsize_timeduration" android:textColor="@color/nav_channel_list_color_txt" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/channel_nav_select_list" android:layout_width="0px" android:layout_height="match_parent" android:layout_marginLeft="@dimen/nav_favorite_list_marLeft" android:text="@string/nav_select_list" android:layout_weight="1"/>
                <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/channel_nav_exit_icon" android:paddingLeft="@dimen/nav_channel_list_padTop" android:layout_width="40dp" android:layout_height="8dp" android:src="@drawable/tk_cm_color_key_blue"/>
                <TextView android:textSize="@dimen/nav_channel_list_textsize_timeduration" android:textColor="@color/nav_channel_list_color_txt" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/channel_nav_exit" android:layout_width="0px" android:layout_height="match_parent" android:layout_marginLeft="@dimen/nav_favorite_list_marLeft" android:text="@string/nav_delete" android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
