<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/nav_ttx_favoriteList_layout" android:background="@drawable/info_banner_background" android:layout_width="match_parent" android:layout_height="match_parent">
