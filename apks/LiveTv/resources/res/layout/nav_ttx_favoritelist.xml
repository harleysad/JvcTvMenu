        </TableRow>
        <TableRow android:id="@+id/nav_fav_page_up_down" android:visibility="gone" android:layout_weight="1">
            <TextView android:textSize="@dimen/nav_textsize_normal" android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/fav_nav_page_up" android:layout_width="0px" android:layout_height="match_parent" android:text="@string/nav_page_up" android:drawableLeft="@drawable/tk_cm_color_key_red" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/nav_textsize_normal" android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/fav_nav_page_down" android:layout_width="0px" android:layout_height="match_parent" android:text="@string/nav_page_down" android:drawableLeft="@drawable/tk_cm_color_key_green" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
