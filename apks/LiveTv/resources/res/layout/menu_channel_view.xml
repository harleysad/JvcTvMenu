<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/common_channelview_text_num" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    <TextView android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/common_channelview_text_type" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    <TextView android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/common_channelview_text_freq" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    <TextView android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/common_channelview_text_system" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    <TextView android:textColor="@color/white" android:ellipsize="marquee" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/common_channelview_text_name" android:layout_width="match_parent" android:layout_height="match_parent" android:scrollHorizontally="true" android:singleLine="true" android:layout_weight="1"/>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/common_channelview_pic_skip" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/poweron_channel_normal" android:layout_weight="1"/>
    <CheckBox android:layout_gravity="center_vertical" android:id="@+id/channel_info_check" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
</LinearLayout>
