<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/menu_scan_dialog_id" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_weight="1">
        <TextView android:id="@+id/state" android:layout_width="wrap_content" android:layout_height="wrap_content" style="android:style/TextAppearance_Theme_Dialog"/>
        <com.mediatek.wwtv.tvcenter.commonview.Loading android:id="@+id/setup_tv_scan_loading" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/textViewStyle"/>
    </LinearLayout>
    <TextView android:id="@+id/analoguechannel_scan_up_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" style="android:style/TextAppearance_Theme_Dialog"/>
    <TextView android:id="@+id/analoguechannel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" style="android:style/TextAppearance_Theme_Dialog"/>
    <TextView android:id="@+id/numberchannel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" style="android:style/TextAppearance_Theme_Dialog"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/menu_scan_proline" android:paddingLeft="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
        <ProgressBar android:layout_gravity="center" android:id="@+id/scanprogressbar" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_marginRight="20dp" style="@style/Widget.ProgressBar.Horizontal"/>
        <TextView android:textColor="@color/finishpercentage_color" android:id="@+id/finishpercentage" android:layout_width="wrap_content" android:layout_height="wrap_content" style="android:style/TextAppearance_Theme_Dialog"/>
    </LinearLayout>
</LinearLayout>
